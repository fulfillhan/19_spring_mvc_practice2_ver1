<mapper namespace="com.application.practice2Ver1.boardAdvance.dao.BoardAdvanceDAO">
<select id="getAllViewCnt" parameterType="hashmap" resultType="int">
<choose>
	<when test="searchKeyword ='total'">
		<choose>
			<when test="searchWord = ''">
				SELECT 
						COUNT(*)
				FROM 
						MAIN_BOARD
			</when>
			<otherwise>
			SELECT 
					COUNT(*)
			FROM 
					MAIN_BOARD
			WHERE
					SUBJECT LIKE CONCAT('%',#{searchWord}, '%') OR
					WRTIER LIKE CONCAT('%', #{serachWord}, '%')
			</otherwise>	
		</choose>
	</when>
	<otherwise>
	 SELECT
	 		COUNT(*)
	FROM
			MAIN_BOARD
	WHERE 
			<if test="searchKeyword.equals('subject')">
			 SUBJECT LIKE CONCAT('%', #{searchWord}, '%')
			</if>
			<if test="searchKeyword.equals('writer')">
			WRITER LIKE CONCAT('%', #{searchWord}, '%')
			</if>
	</otherwise>
</choose>
</select>

